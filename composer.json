{
    "name": "vigihdev/exceptions",
    "description": "Helper exception library for PHP.",
    "homepage": "https://github.com/vigihdev/exceptions",
    "type": "library",
    "keywords": [
        "php",
        "exceptions",
        "error handling",
        "custom exceptions"
    ],
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Vigih Dev",
            "email": "vigihdev@gmail.com",
            "role": "developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Vigihdev\\Exceptions\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vigihdev\\Exceptions\\Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0
    },
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "10.5.x-dev"
    },
    "scripts": {
        "test": "phpunit",
        "dev": "php -S localhost:1032 local-dev/index.php"
    }
}